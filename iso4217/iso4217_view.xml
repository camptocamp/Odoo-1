<?xml version="1.0" ?>
<openerp>
    <data>

    <record id="view_currency_form_l10n_ru_ifrs" model="ir.ui.view">
            <field name="name">res.currency.form_new</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="full_name"/>
                    <field name="code"/>
                </xpath>
            </field>
        </record>

    <record id="view_currency_tree_l10n_ru_ifrs" model="ir.ui.view">
        <field name="name">res.currency.tree</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_tree"/>
        <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="full_name"/>
                </xpath>
                <xpath expr="//field[@name='symbol']" position="after">
	         <field name="code"/>
                </xpath>
       </field>
    </record>

    </data>
</openerp>