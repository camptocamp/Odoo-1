<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data noupdate="1">
		<record id="action_client_l10n_ru_ifrs_menu" model="ir.actions.client">
			<field name="name">Open Account Dashboard Menu</field>
			<field name="tag">reload</field>
			<field name="params" eval="{'menu_id': ref('account.menu_board_journal_1')}" />
		</record>
		<record id="base.open_menu" model="ir.actions.todo">
			<field name="action_id" ref="action_client_l10n_ru_ifrs_menu" />
			<field name="state">open</field>
		</record>
	</data>
	
	<data noupdate="0">
		<record id="base.RUB" model="res.currency">
			<field name="active" eval="True" />
		</record>
		<record id="ru_ifrs_2657" model="account.account.template">
			<field name="name">Переводы в пути</field>
			<field name="code">2657</field>
			<field name="reconcile" eval="True" />
			<field name="user_type_id" ref="account.data_account_type_current_assets" />
		</record>
		
		<!-- Chart template -->
		<record id="l10n_ru_ifrs_chart_template" model="account.chart.template">
			<field name="name">Russian IFRS</field>
			<field name="transfer_account_id" ref="ru_ifrs_2657" />     
			<field name="currency_id" ref="base.RUB" />
			<field name="spoken_languages" eval="'ru_RU'" />
		</record>
		<record id="ru_ifrs_2657" model="account.account.template">
			<field name="chart_template_id" ref="l10n_ru_ifrs_chart_template" />
		</record>
	</data>
</openerp>
